<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/order_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            app:title="" />
    </android.support.design.widget.AppBarLayout>

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/instrument_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/progressbar"
            android:layout_marginBottom="40dp"
            android:layout_marginEnd="49dp"
            android:layout_marginRight="49dp"
            android:layout_toLeftOf="@+id/progressbar"
            android:layout_toStartOf="@+id/progressbar"
            android:text="Name of Instruments" />

        <TextView
            android:id="@+id/institute_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/progressbar"
            android:layout_marginBottom="40dp"
            android:layout_marginEnd="49dp"
            android:layout_marginRight="49dp"
            android:layout_toLeftOf="@+id/progressbar"
            android:layout_toStartOf="@+id/progressbar"
            android:text="Institute" />

        <TextView
            android:id="@+id/instrument_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/progressbar"
            android:layout_marginBottom="40dp"
            android:layout_marginEnd="49dp"
            android:layout_marginRight="49dp"
            android:layout_toLeftOf="@+id/progressbar"
            android:layout_toStartOf="@+id/progressbar"
            android:text="Location on Map" />

        <TextView
            android:id="@+id/details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/progressbar"
            android:layout_marginBottom="40dp"
            android:layout_marginEnd="49dp"
            android:layout_marginRight="49dp"
            android:layout_toLeftOf="@+id/progressbar"
            android:layout_toStartOf="@+id/progressbar"
            android:text="Details" />
        <TextView
            android:id="@+id/application"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/progressbar"
            android:layout_marginBottom="40dp"
            android:layout_marginEnd="49dp"
            android:layout_marginRight="49dp"
            android:layout_toLeftOf="@+id/progressbar"
            android:layout_toStartOf="@+id/progressbar"
            android:text="Use or Application" />
    </LinearLayout>
</RelativeLayout>
