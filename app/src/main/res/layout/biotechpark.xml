<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/order_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            app:title="" />
    </android.support.design.widget.AppBarLayout>

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgPark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/biotech_park_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/progressbar"
            android:layout_marginBottom="40dp"
            android:layout_marginEnd="49dp"
            android:layout_marginRight="49dp"
            android:layout_toLeftOf="@+id/progressbar"
            android:layout_toStartOf="@+id/progressbar"
            android:text="Name" />


        <!--This is for google map co-ordinates-->
        <TextView
            android:id="@+id/biotech_park_loation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/progressbar"
            android:layout_marginBottom="40dp"
            android:layout_marginEnd="49dp"
            android:layout_marginRight="49dp"
            android:layout_toLeftOf="@+id/progressbar"
            android:layout_toStartOf="@+id/progressbar"
            android:text="Location Map" />

        <TextView
            android:id="@+id/biotech_park_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/progressbar"
            android:layout_marginBottom="40dp"
            android:layout_marginEnd="49dp"
            android:layout_marginRight="49dp"
            android:layout_toLeftOf="@+id/progressbar"
            android:layout_toStartOf="@+id/progressbar"
            android:text="State" />

        <TextView
            android:id="@+id/biotech_park_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/progressbar"
            android:layout_marginBottom="40dp"
            android:layout_marginEnd="49dp"
            android:layout_marginRight="49dp"
            android:layout_toLeftOf="@+id/progressbar"
            android:layout_toStartOf="@+id/progressbar"
            android:text="City" />

        <TextView
            android:id="@+id/incubator_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/progressbar"
            android:layout_marginBottom="40dp"
            android:layout_marginEnd="49dp"
            android:layout_marginRight="49dp"
            android:layout_toLeftOf="@+id/progressbar"
            android:layout_toStartOf="@+id/progressbar"
            android:text="Address" />

        <TextView
            android:id="@+id/biotech_park_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/progressbar"
            android:layout_marginBottom="40dp"
            android:layout_marginEnd="49dp"
            android:layout_marginRight="49dp"
            android:layout_toLeftOf="@+id/progressbar"
            android:layout_toStartOf="@+id/progressbar"
            android:text="Description" />

        <TextView
            android:id="@+id/biotech_park_website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/progressbar"
            android:layout_marginBottom="40dp"
            android:layout_marginEnd="49dp"
            android:layout_marginRight="49dp"
            android:layout_toLeftOf="@+id/progressbar"
            android:layout_toStartOf="@+id/progressbar"
            android:text="WebSite" />

    </LinearLayout>

</RelativeLayout>