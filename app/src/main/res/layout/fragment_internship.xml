<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smartindia.hackathon.biotechnology.Internship.view.InternshipFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="Professor"
                app:titleTextColor="#FFFFFF" />

        </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appBarLayout"
            app:cardCornerRadius="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/spinner_city"
                                android:layout_width="185dp"
                                android:text="Select City"
                                android:layout_height="wrap_content"
                                android:padding="4dp" />

                            <Spinner
                                android:id="@+id/spinner_topic"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="4dp" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/button_submit"
                            android:layout_width="75dp"
                            android:layout_height="36dp"
                            android:layout_gravity="end"
                            android:layout_margin="2dp"
                            android:background="@drawable/button_filter"
                            android:padding="4dp"
                            android:text="SUBMIT"
                            android:textSize="20dp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_filter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"></android.support.v7.widget.RecyclerView>

                    <ProgressBar
                        android:id="@+id/professor_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true" />

                </RelativeLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

</FrameLayout>
