<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/layout10">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:padding="4dp"
                android:textColor="#000000"
                android:textSize="25dp"
                android:textStyle="bold"
                android:id="@+id/instrument_name"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:padding="4dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:id="@+id/instrument_city"
                android:text="CITY"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/progress_bar5"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/institute_image"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/instrument_institute"
                android:textSize="25dp"
                android:textColor="#000000"
                android:padding="4dp"
                android:textStyle="bold"
                android:text="INSTITUTE"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textColor="#000000"
                android:padding="4dp"
                android:textStyle="bold"
                android:text="SPECIFICATION : "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/instrument_features"
                android:textSize="20dp"
                android:textColor="#000000"
                android:padding="4dp"
                android:text="4 gb ram"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>