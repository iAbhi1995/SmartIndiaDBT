<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/equipment_item_linear"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.CardView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:paddingBottom="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:padding="4dp"
                android:textColor="#000000"
                android:textSize="25dp"
                android:textStyle="bold"
                android:id="@+id/instrument_name"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:padding="4dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:id="@+id/instrument_city"
                android:text="CITY"/>
            <ImageView android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/institute_image"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/instrument_institute"
                android:textSize="25dp"
                android:textColor="#000000"
                android:padding="4dp"
                android:textStyle="bold"
                android:text="INSTITUTE"/>

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/instrument_features"
                android:textSize="20dp"
                android:textColor="#000000"
                android:padding="4dp"
                android:text="4 gb ram"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>